<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="28dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:src="@drawable/einstain_meme"
            android:layout_margin="10dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PLAY WITH NUMBER"
            android:textSize="40dp"
            android:textColor="#f00"
            android:textStyle="bold"
            android:textAlignment="center"
            />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Instraction :"
        android:textColor="#000"
        android:textSize="18dp"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter a number. If it match with computer, you will win. Otherwise you will loss. Let's play.."
        android:textColor="#000"
        android:textSize="20dp"
        android:textStyle="italic"
        android:layout_marginBottom="28dp"
        />

    <EditText
        android:id="@+id/numberET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter a number between 1 to 10"
        android:layout_margin="12dp"
        android:inputType="numberDecimal"
        />

    <Button
        android:id="@+id/guessBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="guess the number"
        android:padding="12dp"
        android:layout_margin="12dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="#abcdef"
        />


</LinearLayout>